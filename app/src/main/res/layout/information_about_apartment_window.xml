<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageApartment"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp">

        </ImageView>
        <TextView
            android:id="@+id/apartmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/mainfontmontserrat"
            android:text=""
            android:textColor="@color/white"
            android:textSize="25sp">

        </TextView>

        <TextView
            android:id="@+id/apartmentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="15sp"
            android:layout_marginRight="15sp"
            android:fontFamily="@font/mainfontmontserrat"
            android:text="">

        </TextView>

        <TextView
            android:id="@+id/apartmentCountRoomsAndMeters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/mainfontmontserrat"
            android:text="">
        </TextView>
        <TextView
            android:id="@+id/descriptionHouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/mainfontmontserrat"
            android:text=".">
        </TextView>

        <TextView
            android:id="@+id/apartmentCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/mainfontmontserrat"
            android:text=""
            android:textColor="@color/mainYellowColor"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>


</androidx.cardview.widget.CardView>