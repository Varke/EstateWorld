<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/mainList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/streetField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/mainfontmontserrat"
            android:hint="Улица, район, город"
            android:inputType="text"
            android:text=""

            android:textSize="20sp"
            app:met_baseColor="@color/white"
            app:met_errorColor="#ddaa00"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/mainYellowColor">

        </com.rengwuxian.materialedittext.MaterialEditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainfontmontserrat"
            android:text="Количество комнат"
            android:textSize="20sp"></TextView>
        <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
            android:id="@+id/roomSeekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:absoluteMaxValue="1"
            app:absoluteMinValue="5"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainfontmontserrat"
            android:text="Метраж квартиры"
            android:textSize="20sp"></TextView>
        <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
            android:id="@+id/meterSeekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:absoluteMaxValue="30"
            app:absoluteMinValue="160"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainfontmontserrat"
            android:text="Этаж квартиры"
            android:textSize="20sp"></TextView>
        <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
            android:id="@+id/levelSeekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:absoluteMaxValue="1"
            app:absoluteMinValue="9"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainfontmontserrat"
            android:text="Стоимость"
            android:textSize="20sp"></TextView>
        <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
            android:id="@+id/costSeekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:absoluteMaxValue="600000"
            app:absoluteMinValue="10000000"
            android:layout_marginBottom="30dp"/>


        <CheckBox
            android:id="@+id/brickCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainfontmontserrat"
            android:text="Кирпичный дом"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/panelCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/mainfontmontserrat"
            android:text="Панельный дом"
            android:textSize="20sp" />



    </LinearLayout>

    </ScrollView>
</androidx.cardview.widget.CardView>